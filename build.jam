import os ;
import sw/lib/CommonTools/boost-build/features/thor ;
import sw/lib/CommonTools/boost-build/features/chimera ;
import sw/lib/CommonTools/boost-build/features/freertos ;

# ====================================================
# Local Rules 
# ====================================================
local rule explicit_alias ( name : sources * : requirements * : default-build * : usage-requirements * )
    {
    alias $(name) : $(sources) : $(requirements) : $(default-build) : $(usage-requirements) ;
    explicit $(name) ;
    }

# ====================================================
# Local Resources 
# ====================================================


# ====================================================
# Public Targets
# ====================================================

# ====================================================
# AeroFC Simulator Executables
#   Builds the project in a simulator configuration. This 
#   swaps out the Chimera backend to use drivers that are
#   compatible with Windows and Linux.
# ====================================================
local sim_src_dir = sw/sim ;
local sim_inc_dir = sw ;

# ------------------------------------------
# Windows Variant
# ------------------------------------------
exe aero_fc_simulator
    :   [ glob $(sim_src_dir)/*.cpp ]
        /CHIMERA//CORE
        /FREERTOS//CORE
        /FREERTOS//DEVICE_TARGET

        /AERO_FC//A
        /AERO_FC//D

    :   <Chimera>enabled
        <FreeRTOS>enabled-Windows
        <link>static
        <include>$(aero_fc_inc_dir)
        <include>$(sim_inc_dir)
        <define>USING_FREERTOS
        <define>NOMINMAX
        <define>SIM

        # FIXME: This is quite ugly, but it works.
        # Very specific to host PC compilation of boost libs...
        <toolset>gcc:<linkflags>"-lwinmm -lboost_thread-mgw82-mt-x64-1_70 -lboost_chrono-mgw82-mt-x64-1_70 -lboost_date_time-mgw82-mt-x64-1_70"

        <use>/CHIMERA//PUB
        <use>/FREERTOS//PUB
        <use>/PRJ//FreeRTOS_CFG
    ;

# ------------------------------------------
# Posix (Linux) Variant
# ------------------------------------------
exe aero_fc_simulator
    :   [ glob $(sim_src_dir)/*.cpp ]
        /CHIMERA//CORE
        /FREERTOS//CORE
        /FREERTOS//DEVICE_TARGET

        /AERO_FC//A
        /AERO_FC//D

    :   <Chimera>enabled-Sim
        <FreeRTOS>enabled-Posix-heap4
        <link>static
        <include>$(aero_fc_inc_dir)
        <include>$(sim_inc_dir)
        <define>USING_FREERTOS
        <define>NOMINMAX
        <define>SIM

        <include>/usr/include
        <linkflags>"-lpthread -lboost_thread -lboost_chrono -lboost_date_time"

        <use>/CHIMERA//PUB
        <use>/FREERTOS//PUB
        <use>/PRJ//FreeRTOS_CFG
        <use>/PRJ//BOOST
    ;
explicit aero_fc_simulator ;

# ------------------------------------------
# Generate the appropriate target for building the sim
# ------------------------------------------
if [ os.name ] in NT
{
    explicit_alias simulator_variant 
        :   aero_fc_simulator 
        : 
        :   <FreeRTOS>enabled 
            <FreeRTOS-port>Windows
            <FreeRTOS-heap>heap4
            <Chimera>enabled
            <Chimera-backend>Sim
        ;
}
else
{
    explicit_alias simulator_variant 
        :   aero_fc_simulator 
        : 
        :   <FreeRTOS>enabled 
            <FreeRTOS-port>Posix
            <FreeRTOS-heap>heap4
            <Chimera>enabled
            <Chimera-backend>Sim
        ; 
}

explicit_alias simulator : install_simulator ;
install install_simulator : simulator_variant : <location>$(TOP)/artifacts ;

